<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:id="@+id/title" android:clipToPadding="false"
	android:clipChildren="false">

	<LinearLayout android:layout_width="fill_parent" 
		android:layout_height="wrap_content" android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true" android:id="@+id/buttom_menu"
		android:orientation="vertical">
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal" 
				android:visibility="gone"
				android:id="@+id/button_buttom_center_detail"
				android:background="@drawable/bg_bar_center"
				>
				<RelativeLayout android:layout_width="fill_parent"
			       android:layout_alignParentBottom="true" 
			       android:layout_height="wrap_content" 
			       android:layout_weight="1"
			       android:paddingBottom="8dip" 
			       android:paddingTop="8dip" >
			    	<ImageView android:layout_width="wrap_content" android:id="@+id/button_setting"
					   android:layout_height="wrap_content" android:background="@drawable/button_setting_selector"
					   android:layout_centerInParent="true">
					</ImageView>
				</RelativeLayout>
					
				<RelativeLayout android:layout_width="fill_parent"
			        android:layout_alignParentBottom="true" 
			        android:layout_height="wrap_content" 
			        android:layout_weight="1"
			        android:paddingBottom="8dip" 
			        android:paddingTop="8dip" >
				   <ImageView android:layout_width="wrap_content" android:id="@+id/button_full_down"
					  android:layout_height="wrap_content" android:background="@drawable/button_full_down_selector"
					  android:paddingBottom="5dip"  android:layout_centerInParent="true"></ImageView>
				</RelativeLayout>
					
				<RelativeLayout android:layout_width="fill_parent"
			        android:layout_alignParentBottom="true" 
			        android:layout_height="wrap_content" 
			        android:layout_weight="1"
			        android:paddingBottom="8dip" 
		        	android:paddingTop="8dip" >
				   <ImageView android:layout_width="wrap_content" android:id="@+id/button_more"
					   android:layout_height="wrap_content" android:background="@drawable/button_more_selector"
					   android:paddingBottom="5dip"  android:layout_centerInParent="true" ></ImageView>
				</RelativeLayout>
				<RelativeLayout android:layout_width="fill_parent"
				    android:layout_alignParentBottom="true" 
			        android:layout_height="wrap_content" 
			        android:layout_weight="1"
			        android:paddingBottom="8dip" 
			        android:paddingTop="8dip" >
				   <ImageView android:layout_width="wrap_content" android:id="@+id/button_about"
				        android:layout_height="wrap_content" android:background="@drawable/button_about_selector"
					    android:paddingBottom="5dip" android:layout_centerInParent="true"></ImageView>
				</RelativeLayout>
		</LinearLayout>
			
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_alignParentBottom="true" 
			android:layout_height="wrap_content" android:orientation="horizontal"
			>
			<ImageView android:layout_width="wrap_content" android:id="@+id/button_tile"
				android:layout_height="wrap_content" android:background="@drawable/button_ok_selector"
				android:paddingBottom="10dip" android:layout_marginLeft="10dip"></ImageView>
				
				<ImageView android:layout_width="wrap_content" android:id="@+id/button_buttom_center"
				android:layout_height="wrap_content" android:background="@drawable/button_buttom_center_selector"
				android:paddingBottom="10dip" android:layout_centerInParent="true"
				></ImageView>
				

			<ImageView android:layout_width="wrap_content" android:id="@+id/button_switch"
				android:layout_height="wrap_content" android:background="@drawable/button_switch_selector"
				android:paddingBottom="10dip" android:layout_alignParentRight="true"
				android:layout_marginRight="10dip"></ImageView>
				
		</RelativeLayout>
	</LinearLayout>
	
	<com.jiubang.util.MyTileView 
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:id="@+id/mytileview"></com.jiubang.util.MyTileView>

	<View android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:id="@+id/ani_view_tran_left"></View>

	<View android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:id="@+id/ani_view_tran_right"></View>

	<View android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:id="@+id/ani_view_rotate"></View>
</RelativeLayout>





