<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.jiubang.tile"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".Splash"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".Tile" android:label="@string/app_name"
			android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation">
		</activity>


		<activity android:name=".TileDetail" android:label="@string/app_name"
			android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation">
		</activity>
		<activity android:name=".TileDetailHelp" android:label="@string/app_name"
			android:theme="@style/Theme.Translucent" android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation">
		</activity>
		
		<activity android:name=".Setting"  android:screenOrientation="portrait">
		</activity>
		

    </application>
    <uses-sdk android:minSdkVersion="7" />

</manifest> 